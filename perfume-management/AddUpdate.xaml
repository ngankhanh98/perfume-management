    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="531,369,0,0"/>
        <Label Content="Name:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="1.141,1.044" Margin="30,38,0,0"/>
        <Label Content="Volume:" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="1.141,1.044" Margin="30,69,0,0"/>
