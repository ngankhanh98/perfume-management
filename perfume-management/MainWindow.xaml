<Window x:Class="perfume_management.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:perfume_management"
        mc:Ignorable="d"
        Title="Perfume Dashboard" Height="450" Width="800">
    <Grid>
        <Button Name="button_Load" Content="LOAD ITEMS" HorizontalAlignment="Left" VerticalAlignment="Top" Width="94" Margin="30,30,0,0" Click="Button_Load_Click"/>
        <Button Name="button_Add" Content="ADD ITEM" HorizontalAlignment="Left" VerticalAlignment="Top" Width="104" Margin="160,30,0,0" Click="Button_Add_Click"/>
        <Button Name="button_Del" Content="DELETE ITEM" HorizontalAlignment="Left" VerticalAlignment="Top" Width="101" Margin="445,30,0,0" Click="Button_Del_Click"/>
        <Button Name="button_Save" Content="SAVE ITEM" HorizontalAlignment="Left" VerticalAlignment="Top" Width="103" Margin="297,30,0,0" Click="Button_Save_Click"/>
        <DataGrid Name="datagrid_Items" ItemsSource="{Binding}" Margin="30,70,30,30"/>

    </Grid>
</Window>
